{
  "manifest_version": 3,
  "name": "Refresh Page Extension",
  "version": "1.0",
  "description": "Reloads the current tab if selected elements are not found.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/hello_extensions.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/jquery-3.7.1.min.js",
        "scripts/content.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}