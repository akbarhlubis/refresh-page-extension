{
  "manifest_version": 3,
  "name": "Auto-Page Refresher",
  "version": "1.0",
  "description": "Reloads the current page using chrome extension with specific time or conditions.",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/jquery-3.7.1.min.js",
        "scripts/content.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}